<body>
<div id="fb-root"></div>

<%- include ('header')%>


<!-- Main Content -->
<div class="col-1-3">
    <div class="frame form fadeInUp" style="padding: 1rem 3rem;">
        <table>
            <tr>
                <th>
                    <div class="logo">
                        <img src="/src/public/images/logo-color.png" alt="logo-image">
                        <h1>Login</h1>
                    </div>
                </th>
            </tr>
            <form action="/login" method="post">
                <tr>
                    <td>
                        <input type="email" placeholder="Email / phone" name="email">
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="password" placeholder="Password" name="password">
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="text" placeholder="Code" name="code">
                    </td>
                </tr>
                <tr>
                    <td>
                        <button id="login" class="button-purple">Login</button>
                    </td>
                </tr>
            </form>
            <tr>
                <td>
                    <div class="fb-login-button" data-width="" data-size="medium" data-button-type="continue_with"
                         data-layout="default" data-auto-logout-link="false" data-use-continue-as="true"></div>
                </td>
            </tr>
            <tr>
                <td>
                    <p class="float-left"><a href="/register">Register</a></p>
                    <p class="float-right"><a href="/recover-password">Recover Password</a></p>
                </td>
            </tr>
        </table>
    </div>
</div>

